@using RestaurantMenuProject.Common
@using RestaurantMenuProject.Data.Models
@using Microsoft.AspNetCore.Identity
@using System.Security.Claims;
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">


    @if (this.SignInManager.IsSignedIn(this.User))
    {
        <li class="nav-item">
            <a class="nav-link text-dark tab" asp-area="" asp-controller="Order" asp-action="All" asp-route-id="@this.User.FindFirst(ClaimTypes.NameIdentifier).Value" title="Orders">Orders</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark tab" asp-area="" asp-controller="Basket" asp-action="Index" title="Manage">Basket</a>
        </li>

        <li class="nav-item">
            <a class="nav-link text-dark tab" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Account</a>
        </li>
        <li class="nav-item">
        </li>
    }
     else
    {
        @if (this.User.IsInRole(GlobalConstants.ClientRoleName))
        {
            
        }
        else 
        {
            <li class="nav-item">
                <a class="nav-link text-dark tab" asp-area="Identity" asp-page="/Account/Register">Register</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark tab" asp-area="Identity" asp-page="/Account/Admin">Admin</a>
            </li>
        }
    } 
</ul>